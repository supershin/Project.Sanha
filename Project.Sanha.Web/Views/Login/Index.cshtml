<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>SAN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>
    <section class="d-flex justify-content-center align-items-start vh-100">
        <div class="container">
            <div class="row justify-content-sm-center" style="margin-top: 50px">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    @*<div class="text-center my-5">
                        <img src="~/images/img1.png" alt="logo" width="300">
                    </div>*@
                    <div class="card shadow-lg">
                        <div class="card-body p-5" style="vertical-align: middle;">
                            <h1 class="text-center fs-4 card-title fw-bold mb-4">Login SAN</h1>
                            <form method="POST" asp-controller="Login" asp-action="Login" class="needs-validation" novalidate="" autocomplete="off">
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="userName">Username</label>
                                    <input id="userName" class="form-control" name="userName" value="" required autofocus>
                                    <div class="invalid-feedback">
                                        User name is invalid
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="mb-2 w-100">
                                        <label class="text-muted" for="password">Password</label>
                                    </div>
                                    <input id="password" type="password" class="form-control" name="password" required>
                                    <div class="invalid-feedback">
                                        Password is required
                                    </div>

                                    <!-- Add the remark below the password input -->
                                    <div class="form-text text-muted mt-2">
                                        *ใช้รหัส Aftersale ในการเข้าสู่ระบบ
                                    </div>


                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="text-danger mt-2">
                                            @TempData["ErrorMessage"]
                                        </div>
                                    }
                                </div>
                                <div class="d-flex align-items-center">
                                    <button type="submit" class="btn btn-primary ms-auto">
                                        Login
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </section>
<script src="js/login.js"></script>
</body>

</html>