
@model Project.Sanha.Web.Models.InformationDetail
@{
    ViewData["Title"] = "รายระเอียดข้อมูล";
}

<div class="page-body">
    <div class="container-xl">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <div class="card" id="card-main">
                        <div class="card-body">
                            <h5 class="card-main-font">ชื่อโครงการ: @Model.ProjectName</h5>
                            <h5 class="card-sub-font">เลขที่บ้าน: @Model.AddressNo</h5>
                            <h5 class="card-sub-font">วันที่โอน: @Model.TransferDate</h5>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="col-12">
                @foreach (var shop in Model.ListShopService)
                {
                    <div class="row mb-4">
                        <div class=" col-lg-12 col-md-12 col-sm-12">
                            <div class="card" style="width: 100%; height: 100%;">
                                <div class="row no-gutters">
                                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                                        <i class="fa-solid fa-gift fa-5x fix-icon"></i>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">@shop.Name</h5>
                                            <p class="card-text">@shop.Description</p>
                                            <p class="card-text">หมดอายุ: @shop.Exp</p>
                                            <p class="card-text">จำนวน:@shop.Quota</p>
                                            <div class="d-flex justify-content-end">
                                                <form asp-controller="Information" asp-action="UsingCode">
                                                    <input type="hidden" asp-for="@Model.ProjectId" />
                                                    <input type="hidden" asp-for="@Model.UnitId" />
                                                    <input type="hidden" asp-for="@shop.ShopID" />
                                                    <input type="hidden" asp-for="@Model.ContractNumber" />
                                                    <input type="hidden" asp-for="@Model.ProjectName" />
                                                    <input type="hidden" asp-for="@Model.CustomerName" />
                                                    <input type="hidden" asp-for="@Model.CustomerMobile" />
                                                    <input type="hidden" asp-for="@Model.CustomerEmail" />
                                                    <input type="hidden" asp-for="@Model.AddressNo" />
                                                    <input type="hidden" asp-for="@Model.TransferDate" />
                                                    <input type="hidden" asp-for="@shop" />
                                                    <button type="submit" class="btn btn-primary">ใช้คูปอง</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style>
    .profile-view-info {
    }

    body {
        margin: 3em;
    }

    .card-img-top {
        width: 60%;
        border-radius: 50%;
        margin: 0 auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    #card-main {
        padding: 1.5em 0.5em 0.5em;
        text-align: center;
        border-radius: 0em;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }

    .card-main-font {
        font-weight: bold;
        font-size: 1.5em;
        text-align: left;
        margin-bottom: 20px;
        padding-left: 15px;
    }

    .card-sub-font {
        font-size: 1.25em;
        text-align: left;
        margin-bottom: 20px;
        padding-left: 15px;
    }

    .card {
        padding: 1.5em 0.5em 0.5em;
        text-align: center;
        border-radius: 2em;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }

    .card-title {
        font-weight: bold;
        font-size: 1.5em;
        text-align: right;
    }

    .card-text {
        text-align: right;
    }

    .btn-primary {
        border-radius: 2em;
        padding: 0.5em 1.5em;
    }

    .fix-icon {
        align-content: center;
    }
</style>
