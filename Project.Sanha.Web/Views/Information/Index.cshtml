
@{
    ViewData["Title"] = "รายระเอียดข้อมูล";
    var range = Enumerable.Range(1, 3);
}

<div class="page-body">
    <div class="container-xl">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <div class="card" id="card-main">
                        <div class="card-body">
                                <h4 class="card-main-font">ชื่อโครงการ :&nbsp;โครงการบ้านและคอนโด</h4>
                                <h4 class="card-main-font">เลขที่บ้าน :&nbsp; 123/45</h4>
                                <h4 class="card-main-font">วันที่โอน :&nbsp;01/12/2024</h4>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        </div>
        @foreach (var i in range)
        {
            <div class="col-12">
                <div class="card" style="width: 100%; height: 20%">
                    <div class="row">
                        <div class="col-4 d-flex align-items-center justify-content-center">
                            <i class="fa-solid fa-gift fa-7x fix-icon"></i>
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h5 class="card-title">Card @i</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <div class="d-flex justify-content-end">
                                    <a href="#" class="btn btn-primary">ใช้คูปอง</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
        
                
