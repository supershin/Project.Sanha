@section scripts{
    <script src="~/js/Information.js?version=@DateTime.Now.Ticks.ToString()"></script>
    <script>
        $(document).ready(() => {

            var showModal = @Model.CheckFormat.ToString().ToLower();
            if (!showModal) {
                $('#infoModal').modal('show');
            }

            information.init();
        });
    </script>
