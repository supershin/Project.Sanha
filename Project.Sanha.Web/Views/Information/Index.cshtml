
@{
    ViewData["Title"] = "รายระเอียดข้อมูล";
    var range = Enumerable.Range(1, 3);
}

<div class="page-body">
    <div class="container-xl">
        <div class="col-12">
            <div class="row">
                <div class="col-12">
                    <div class="card" id="card-main">
                        <div class="card-body">
                            <h5 class="card-main-font">ชื่อโครงการ: โครงการบ้านและคอนโดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดดด</h5>
                            <h5 class="card-sub-font">เลขที่บ้าน: 123/45</h5>
                            <h5 class="card-sub-font">วันที่โอน: 01/12/2024</h5>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="col-12">
                @foreach (var i in range)
                {
                    <div class="row mb-4">
                        <div class=" col-lg-12 col-md-12 col-sm-12">
                            <div class="card" style="width: 100%; height: 100%;">
                                <div class="row no-gutters">
                                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                                        <i class="fa-solid fa-gift fa-5x fix-icon"></i>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">Card @i</h5>
                                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                            <div class="d-flex justify-content-end">
                                                <a asp-controller="Information" asp-action="UsingCode" class="btn btn-primary">ใช้คูปอง</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style>
    .profile-view-info {
    }

    body {
        margin: 3em;
    }

    .card-img-top {
        width: 60%;
        border-radius: 50%;
        margin: 0 auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    #card-main {
        padding: 1.5em 0.5em 0.5em;
        text-align: center;
        border-radius: 0em;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }

    .card-main-font {
        font-weight: bold;
        font-size: 1.5em;
        text-align: left;
        margin-bottom: 20px;
        padding-left: 15px;
    }

    .card-sub-font {
        font-size: 1.25em;
        text-align: left;
        margin-bottom: 20px;
        padding-left: 15px;
    }

    .card {
        padding: 1.5em 0.5em 0.5em;
        text-align: center;
        border-radius: 2em;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }

    .card-title {
        font-weight: bold;
        font-size: 1.5em;
        text-align: right;
    }

    .card-text {
        text-align: right;
    }

    .btn-primary {
        border-radius: 2em;
        padding: 0.5em 1.5em;
    }

    .fix-icon {
        align-content: center;
    }
</style>
